    <div id="divDice">
        {{#playerDice}}
            <span>
                <input id="inputDie{{key}}" type="checkbox" value="die{{key}}" class="checkDie"
                       onchange="updateSelectedDie({{key}}, this.checked)" {{#selected}}checked{{/selected}}/>
                <label id="die{{key}}" for="inputDie{{key}}" class="labelDie"><i class="face{{value}}"></i></label>
            </span>
        {{/playerDice}}
    </div>
    <div id="divRivalDice">
        {{#rivalDice}}
            <span>
                <input id="inputRivalDie{{key}}" type="checkbox" value="rivalDie{{key}}" class="checkDie" {{#selected}}checked{{/selected}}/>
                <label id="rivalDie{{key}}" for="inputRivalDie{{key}}" class="labelDie"><i class="face{{value}}"></i></label>
            </span>
        {{/rivalDice}}
    </div>
    <div id="divButtons">
        {{#stepSplash}}
            <button id="btnInitialThrow" onClick="rollInitialDice()">Xogar</button>
        {{/stepSplash}}
        {{#stepRolling}}
            {{#canReroll}}
                <button id="btnReroll" onclick="rerollDice()" data-times="0">Rolar de novo</button>
            {{/canReroll}}
            <button id="btnEndRolls" onclick="endRollingStep()">Conforme</button>
        {{/stepRolling}}
        {{#stepBets}}
            <div id="currentBet">Aposta actual: {{currentBetText}}</div>
            {{^betsAreSet}}
                <div id="betButtons">
                    {{#isFirstBet}}
                        <button id="btnBetPass" onClick="betPass()">Pasar</button>
                    {{/isFirstBet}}
                    {{^isFirstBet}}
                        <button id="btnBetFold" onClick="betFold()">Retirarse</button>
                        <button id="btnBetCheck" onClick="betCheck()">Ver</button>
                    {{/isFirstBet}}
                    <button id="btnBetRaise" onClick="betRaise(parseInt($('#inputBetRaise')[0].value))">{{raiseText}}</button>
                    <input  id="inputBetRaise" type="number" value="1" min="1" max="10">
                </div>
            {{/betsAreSet}}
            {{#betsAreSet}}
                <button id="btnFinishSubgame" onClick="finishSubgame()">Continuar</button>
            {{/betsAreSet}}
        {{/stepBets}}
        {{#stepResults}}
            <button id="btnFinishSubgame" onClick="nextResults()">Continuar</button>
        {{/stepResults}}
    </div>
</div>
